{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Wrap and Deploy",
            "type": "shell",
            "group": "build",
            "command": "cp",
            "dependsOn": [
                "Wrap (minified)"
            ],
            "args": [
                "ButtonHUD.conf",
                "${config:du.autoconfdir}/${config:du.testconffilename}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Wrap (minified)",
            "type": "shell",
            "group": "build",            
            "command": "./wrap.sh",
            "args": [
                "true"
            ],
            "options": {
                "cwd": "${workspaceFolder}/scripts"
            },
            "problemMatcher": [],
        },
        {
            "label": "Wrap (readable)",
            "type": "shell",
            "group": "build",
            "command": "./wrap.sh",
            "args": [
                "false"
            ],
            "options": {
                "cwd": "${workspaceFolder}/scripts"
            },
            "problemMatcher": []
        },
    ]
}